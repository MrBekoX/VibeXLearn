{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:5173"
  ],
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=vibexlearn;Username=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;Pooling=true;MinPoolSize=5;MaxPoolSize=100;",
    "Redis": "localhost:6379,password=YOUR_REDIS_PASSWORD",
    "Elasticsearch": "http://localhost:9200"
  },
  "Jwt": {
    "Issuer": "VibeXLearnPlatform",
    "Audience": "VibeXLearnPlatform.Clients",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Iyzico": {
    "Environment": "Sandbox",
    "BaseUrl": "https://sandbox-api.iyzipay.com",
    "CallbackUrl": "https://localhost:8443/api/payments/callback"
  },
  "Swagger": {
    "Enabled": true
  },
  "Cache": {
    "DefaultL1Duration": "00:02:00",
    "DefaultL2Duration": "00:30:00",
    "L1ToL2Ratio": 0.2,
    "CategoryTreeL2": "02:00:00",
    "CategoryListL2": "00:30:00",
    "CategoryByIdL2": "00:30:00",
    "CategoryBySlugL2": "00:30:00",
    "CourseListL2": "00:05:00",
    "CourseByIdL2": "00:15:00",
    "CourseBySlugL2": "00:15:00",
    "CourseByInstructorL2": "00:05:00",
    "LessonByCourseL2": "00:10:00",
    "LessonByIdL2": "00:10:00",
    "BadgeListL2": "01:00:00",
    "BadgeByIdL2": "01:00:00",
    "CouponByCodeL2": "00:05:00",
    "CouponByIdL2": "00:10:00",
    "CouponListL2": "00:10:00",
    "EnrollmentByUserL2": "00:05:00",
    "EnrollmentByCourseL2": "00:05:00",
    "SubmissionByStudentL2": "00:05:00",
    "CertificateByUserL2": "00:10:00",
    "LiveSessionByIdL2": "00:03:00"
  },
  "TokenCleanup": {
    "IntervalHours": 24,
    "RetentionDays": 30
  },
  "OpenTelemetry": {
    "Enabled": false,
    "ServiceName": "VibeXLearn",
    "Endpoint": "http://localhost:4317"
  }
}
